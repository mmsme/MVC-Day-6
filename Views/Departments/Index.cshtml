@model IEnumerable<MVC_Day_6.Models.Department>

@{
    ViewBag.Title = "Departments";
}

<h2 class="display-4">Departments</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success mt-3" })
</p>
<table class="table table-hover">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.DeptName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td>
        <td class="d-flex justify-content-end">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary mr-2" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning mr-2" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mr-2" })
            @Html.ActionLink("Add Course", "addCourses", "Departments", new { id = item.Id }, new { @class = "btn btn-info mr-2" })
            @Html.ActionLink("Delete Course", "deleteCourses", "Departments", new { id = item.Id }, new { @class = "btn btn-secondary mr-2" })
            @Html.ActionLink("Manage Courses", "manageCourse", "Departments", new { id = item.Id }, new { @class = "btn btn-success" })
        </td>
    </tr>
}

</table>
